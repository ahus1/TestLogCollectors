<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are  by default assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg - STDOUT Appender%n</pattern>
        </encoder>
    </appender>

    <appender name="OtherAppender" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are  by default assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
        <encoder>
            <pattern>%logger{36} - %msg - Other Appender%n</pattern>
        </encoder>
    </appender>


    <logger name="yet.another">
        <appender-ref ref="OtherAppender" />
    </logger>



    <root level="trace">
        <appender-ref ref="STDOUT" />
    </root>



    <!--
    TODO

    FileAppender

    No appender - e.g. if not additive?

    root.yet.another.test
     - ConsoleAppender without encoder?

    -->
</configuration>